.cur {
  color: #adadad !important;
}
.topic-wrap {
  padding: 20rpx;
  border-bottom: 20rpx solid #f9f9f9;
  background: #fff;
}
.topic-wrap .title-wrap {
  line-height: 40rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}
.topic-wrap .title-wrap .title {
  flex: 5;
  padding-right: 20rpx;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}
.topic-wrap .title-wrap .tag {
  flex: 2;
  text-align: right;
}
.topic-wrap .title-wrap .tag text {
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  font-size: 22rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: top;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
